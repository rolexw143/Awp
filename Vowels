using System;

namespace vowels
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Enter a character: ");
            string input = Console.ReadLine();  // Read the entire line
            char ch = input[0];  // Get the first character

            switch (ch)
            {
                case 'a':
                case 'A':
                case 'e':
                case 'E':
                case 'i':
                case 'I':
                case 'o':
                case 'O':
                case 'u':
                case 'U':
                    Console.WriteLine("The character is a vowel.");
                    break;
                default:
                    Console.WriteLine("The character is not a vowel.");
                    break;
            }

            Console.WriteLine("\nPress any key to exit...");
            Console.ReadLine();  // This will wait for input properly
        }
    }
}
